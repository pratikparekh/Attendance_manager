<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vidish.attendancemanager.MainActivity">

    <View
        android:id="@+id/viewbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:background="@android:color/black" />

    <Button
        android:id="@+id/button_faculty_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/viewbar"
        android:layout_centerHorizontal="true"
        android:layout_margin="24dp"
        android:fontFamily="casual"
        android:text="Faculty Login"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_student_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewbar"
        android:layout_centerHorizontal="true"
        android:layout_margin="24dp"
        android:fontFamily="casual"
        android:text="Student Login"
        android:textSize="24sp"
        android:textStyle="bold" />
</RelativeLayout>
